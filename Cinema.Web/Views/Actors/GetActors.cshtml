@using Cinema.Domain.DataTransferObjects
@using Cinema.Domain.RequestFeatures
@model IEnumerable<ActorDto>

@{
    ViewData["Title"] = "Actors";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var actorParameters = ViewBag.ActorParameters as ActorParameters;
    var metaData = ViewBag.MetaData as MetaData;
}

<h2>Actors</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("GetActors", "Actors", FormMethod.Get, new { id = "actor-form" }))
{
    <fieldset>
        Search by Name: @Html.TextBox("SearchName", actorParameters?.searchName)
        <input type="submit" value="Search" />
    </fieldset>
}

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="GetActors" asp-route-OrderBy="@(actorParameters?.OrderBy == "Name" ? "Name_desc" : "Name")">
                    Name
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var actor in Model)
        {
            <tr>
                <td>@actor.Name</td>
                <td>
                    <a asp-action="GetActor" asp-route-id="@actor.ActorId" class="actor-action" data-id="@actor.ActorId">Details</a>
                    <a asp-action="UpdateActor" asp-route-id="@actor.ActorId" class="actor-action" data-id="@actor.ActorId">Edit</a>
                    <a asp-action="DeleteActor" asp-route-id="@actor.ActorId" class="actor-action" data-id="@actor.ActorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (metaData != null)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(metaData.HasPrevious ? "" : "disabled")">
                <a class="page-link"
                   asp-action="GetActors"
                   asp-route-PageNumber="@(metaData.HasPrevious ? metaData.CurrentPage - 1 : 1)"
                   asp-route-PageSize="@actorParameters?.PageSize"
                   asp-route-SearchName="@actorParameters?.searchName"
                   asp-route-OrderBy="@actorParameters?.OrderBy">
                    &laquo; Previous
                </a>
            </li>

            <li class="page-item active">
                <span class="page-link">
                    Page @metaData.CurrentPage of @metaData.TotalPages
                </span>
            </li>

            <li class="page-item @(metaData.HasNext ? "" : "disabled")">
                <a class="page-link"
                   asp-action="GetActors"
                   asp-route-PageNumber="@(metaData.HasNext ? metaData.CurrentPage + 1 : metaData.CurrentPage)"
                   asp-route-PageSize="@actorParameters?.PageSize"
                   asp-route-SearchName="@actorParameters?.searchName"
                   asp-route-OrderBy="@actorParameters?.OrderBy">
                    Next &raquo;
                </a>
            </li>
        </ul>
    </nav>
}